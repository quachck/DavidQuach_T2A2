<h1 class="mt-3 mb-3">Timeslots for <%= @workshop.title %></h1>

<div id="timeslots" class="row">
  <% @timeslots.each do |timeslot| %>
    <div class="col-md-4">
      <div class='d-flex flex-column align-items-center'>
        <%= render timeslot %>
        <div>
          <%= link_to "Edit this timeslot", edit_timeslot_path(timeslot.id), class:'btn btn-primary mb-2' %>
          <%= button_to "Destroy this timeslot", timeslot, method: :delete, class:'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>




