<div id="<%= dom_id timeslot %>">
  <p>
    <strong>Workshop:</strong>
    <%= timeslot.workshop_id %>
  </p>

  <p>
    <strong>Day:</strong>
    <%= timeslot.day %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= timeslot.start_time %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= timeslot.end_time %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= timeslot.price %>
  </p>

  <p>
    <strong>Total seats:</strong>
    <%= timeslot.total_seats %>
  </p>

  <p>
    <strong>Available seats:</strong>
    <%= timeslot.available_seats %>
  </p>

</div>
