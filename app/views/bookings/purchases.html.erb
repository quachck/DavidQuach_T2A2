<div class="center mt-3"><h1>Purchases History</h1></div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Workshop</th>
    <th>Workshop date</th>
    <th>Timeslot ID</th>
    <th>Instructor</th>
    <th>Booked on</th>
    <th>Amount paid</th>
  </tr>
  <% @bookings.each do |booking| %>
    <tr>
      <td>
        <%= booking.timeslot.workshop.title %>
      </td>
      <td>
        <%= "#{booking.timeslot.day.strftime("%A  %B  %d  %Y")} : #{booking.timeslot.start_time.strftime("%I:%M%p")} - #{booking.timeslot.end_time.strftime("%I:%M%p")}" %>
      </td>
      <td>
        <%= booking.timeslot_id %>
      </td>
      <td>
        <%= booking.instructor.full_name %>
      </td>
      <td>
        <%= booking.created_at.strftime("%A  %B  %d  %Y %I:%M%p") %>
      </td>
      <td>
        <%= number_to_currency(booking.timeslot.price) %>
      </td>

    </tr>
  <% end %>
</table>