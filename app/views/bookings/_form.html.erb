<%= form_for([@timeslot, @booking]) do |form| %>
  <% if @booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
    <div class="card-header"><%= @timeslot.workshop.title %></div>
    <div class="card-body">
      
    <p class="card-text">
      <strong>Day: </strong>
      <%= @timeslot.day.strftime("%A  %B  %d  %Y") %>
    </p>

    <p class="card-text">
      <strong>Time: </strong>
      <%= "#{@timeslot.start_time.strftime("%I:%M%p")} - #{@timeslot.end_time.strftime("%I:%M%p")}" %>
    </p>

    <p class="card-text">
      <strong>Price: </strong>
      <%= number_to_currency(@timeslot.price) %>
    </p>

    <p class="card-text">
      <strong>Location:</strong>
      <%= @timeslot.available_tickets %>
    </p>
    </div>

    <div class="d-flex justify-content-between">
      <%= link_to "Back", workshop_path(@timeslot.workshop_id), class:'btn btn-primary' %>
      <%= form.submit 'Confirm Booking', class:'btn btn-success' %>
    </div>
  </div>
<% end %>
